package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

// ==================== System 分区模块聚合 ====================

phony {
    name: "tranperfhub_system",
    required: [
        // Framework Overlay
        "transsion_framework_overlay",

        // Framework 实现层
        "tranperfhub_impl",

        // JNI 层
        "libtranperfhub-jni",

        // System Native Client
        "libtranperfhub-client",

        // AIDL 接口
        "vendor.transsion.hardware.perfhub-V1-ndk",

        // Aconfig Flags
        "com.transsion.perfhub.flags-aconfig-java",
        "libtranperfhub_flags_c",
    ],
}

// ==================== Vendor 分区模块聚合 ====================

phony {
    name: "tranperfhub_vendor",
    required: [
        // Vendor Service
        "libtranperfhub-adapter",
        "libtranperfhub-client",
        // AIDL 接口
        "vendor.transsion.hardware.perfhub-V1-ndk",

        // Aconfig Flags
        "libtranperfhub_flags_c",
    ],
}
