package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

license {
    name: "vendor_transsion_license",
    visibility: ["//visibility:public"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0", // 或者是其他的协议，如 Proprietary
    ],
    license_text: [
        "NOTICE", // 对应目录下必须有一个名为 NOTICE 的文本文件
    ],
}

// ==================== System 分区模块聚合 ====================

phony {
    name: "tranperfhub_system",
    required: [
        // Framework Overlay
        "transsion_framework_overlay",

        // Framework 实现层
        "tranperfhub_impl",

        // JNI 层
        "libtranperfhub-jni",

        // System Native Client
        "libtranperfhub-client",

        // AIDL 接口
        "vendor.transsion.hardware.perfhub-ndk",

        // Aconfig Flags
        "com.transsion.perfhub.flags-aconfig-java",
        "libtranperfhub_flags_c",
    ],
}

// ==================== Vendor 分区模块聚合 ====================

phony {
    name: "tranperfhub_vendor",
    required: [
        // Vendor Service
        "libtranperfhub-adapter",
        "libtranperfhub-client",
        // AIDL 接口
        "vendor.transsion.hardware.perfhub-ndk",

        // Aconfig Flags
        "libtranperfhub_flags_c",
    ],
}
