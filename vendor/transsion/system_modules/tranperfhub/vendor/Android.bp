package {
    default_applicable_licenses: ["vendor_transsion_license"],
}

// ==================== libtranperfhub-adapter.so ====================
// Vendor AIDL 服务端实现

cc_library_shared {
    name: "libtranperfhub-adapter",
    vendor: true,

    srcs: [
        "adapter/TranPerfHubAdapter.cpp",
        "adapter/PlatformAdapter.cpp",
    ],

    local_include_dirs: [
        "adapter/include",
    ],

    export_include_dirs: [
        "adapter/include",
    ],

    shared_libs: [
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "liblog",
        "libutils",
        "vendor.transsion.hardware.perfhub-V1-ndk",
    ],

    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
    ],
}

// ==================== 聚合目标 ====================

phony {
    name: "tranperfhub_vendor",
    required: [
        // Vendor Adapter (AIDL 服务端)
        "libtranperfhub-adapter",

        // 复用 System 的 Client 库
        "libtranperfhub-client",

        // AIDL 接口
        "vendor.transsion.hardware.perfhub-V1-ndk",
    ],
}
