package {
    default_applicable_licenses: ["default_applicable_licenses"],
}

license {
    name: "vendor_transsion_license",
    visibility: ["//visibility:public"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
    ],
    license_text: [
        "LICENSE",
    ],
}

// ==================== System 分区模块聚合 ====================

phony {
    name: "tranperfhub_system",
    required: [
        // Framework 实现层
        "tranperfhub_impl",

        // JNI 层
        "libtranperfhub-jni",

        // System Native Client
        "libtranperfhub-client",

        // AIDL 接口
        "vendor.transsion.hardware.perfhub-V1-ndk",

        // Aconfig Flags
        "com.transsion.perfhub.flags-aconfig-java",
        "libtranperfhub_flags_c",
        "libaconfig_storage_read_api_cc",
    ],
}

// ==================== Vendor 分区模块聚合 ====================

phony {
    name: "tranperfhub_vendor",
    required: [
        // Vendor Service
        "libtranperfhub-adapter",
        "libtranperfhub-client",
        // AIDL 接口
        "vendor.transsion.hardware.perfhub-V1-ndk",

        // Aconfig Flags
        "libtranperfhub_flags_c",
        "libaconfig_storage_read_api_cc",
    ],
}
