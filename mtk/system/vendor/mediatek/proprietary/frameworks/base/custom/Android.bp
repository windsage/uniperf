cc_library_shared {
    name: "libcustom_prop",
    system_ext_specific: true,
    srcs: [
        "src/custom_prop.cpp",
    ],
    local_include_dirs: [
        "inc",
    ],
    shared_libs: [
        "libdl",
        "libcutils",
        "libnativehelper",
        "liblog",
    ],
    required: [
        "CustomPropInterface",
    ],
}

cc_library_shared {
    name: "libcustom_jni",
    system_ext_specific: true,
    shared_libs: [
        "libcutils",
        "liblog",
        "libnativehelper",
        "libcustom_prop",
        "libandroid_runtime",
    ],
    srcs: [
        "jni/com_mediatek_custom_CustomProperties.cpp",
    ],
    local_include_dirs: [
        "inc",
    ],
}

java_library {
    name: "CustomPropInterface",
    system_ext_specific: true,
    installable: true,
    srcs: [
        "interface/**/*.java",
    ],
    javacflags: [
        "-encoding",
        "UTF-8",
    ],
}
